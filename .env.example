# API URL - use your machine IP when testing on device (e.g. http://192.168.1.5:3001)
EXPO_PUBLIC_API_URL=http://localhost:3001

# Mapbox - for address search/geocoding (public token, safe for client)
# Get yours at https://account.mapbox.com/access-tokens/
EXPO_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token

# Moyasar - publishable key for payment UI (test key for development)
# Get yours at https://moyasar.com/dashboard/
EXPO_PUBLIC_MOYASAR_PUBLISHABLE_KEY=pk_test_your_key

# Apple Pay - merchant ID from Apple Developer (required for Apple Pay on iOS)
# See docs/APPLE_PAY_SETUP.md for full setup once you have Apple Developer account
EXPO_PUBLIC_APPLE_PAY_MERCHANT_ID=merchant.com.als

# Auth - set to true only for local dev to skip login/OTP. Production: leave unset or false.
# EXPO_PUBLIC_SKIP_AUTH_FOR_DEV=true

# Merchant (Nooks) - merchants.id UUID when using multi-tenant; optional for single store
# EXPO_PUBLIC_MERCHANT_ID=

# Nooks public API base URL - when nooksweb exposes branches/orders/branding API
# EXPO_PUBLIC_NOOKS_API_BASE_URL=https://your-nooks-site.netlify.app

# Supabase - for auth (email/password) and promo codes
# Get URL and anon key at https://supabase.com/dashboard → Project Settings → API
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJ...your_supabase_anon_key
