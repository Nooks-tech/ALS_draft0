# Foodics API (required for menu & orders)
FOODICS_API_TOKEN=your_foodics_api_token
FOODICS_API_URL=https://api.foodics.com/v2

# Moyasar - get SECRET key (sk_test_ or sk_live_) from https://moyasar.com/dashboard/
# Publishable key (pk_test_/pk_live_) is for client; server needs secret for creating invoices
MOYASAR_SECRET_KEY=sk_test_your_secret_key

# Alternative: Tap Payments
TAP_SECRET_KEY=sk_test_xxx

# Server
PORT=3001

# Supabase (for OTP storage) - use SERVICE_ROLE key (from Dashboard → Settings → API)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Resend - for sending OTP emails (https://resend.com)
# Free tier: 100 emails/day. Use onboarding@resend.dev for testing.
RESEND_API_KEY=re_xxxxx
OTP_FROM_EMAIL=onboarding@resend.dev

# Payment redirect - public HTTPS URL for success redirect (e.g. https://api.als.delivery)
# Required for Apple Pay web flow to redirect back to app after payment
# PAYMENT_REDIRECT_BASE_URL=https://api.als.delivery

# OTO - delivery dispatch (https://tryoto.com)
# Get refresh token from Settings → API Integrations
OTO_REFRESH_TOKEN=your_refresh_token
# Pickup location code from OTO dashboard (required for createShipment)
OTO_PICKUP_LOCATION_CODE=your_pickup_code
# Only show/use Careem, Barq, Mrsool. Set empty to allow all carriers.
OTO_PREFERRED_CARRIERS=careem,mrsool,barq
# Quick delivery - get deliveryOptionId from GET /api/oto/delivery-options, set one of the returned IDs
# OTO_DELIVERY_OPTION_ID=12345

# Nooks build webhook (Option B – triggers GitHub Actions for Android + iOS EAS builds)
# Copy these into .env and fill. See docs/BUILD_WEBHOOK_SETUP.md.
# Required for POST /build:
GITHUB_TOKEN=
GITHUB_REPO=
# Branch to trigger (default main)
GITHUB_BUILD_REF=main
# Public base URL of this API (used for GET /build → webhook_url). Example: https://api.als.delivery
BUILD_WEBHOOK_BASE_URL=
# Optional: secret Nooks sends in x-nooks-secret header
BUILD_WEBHOOK_SECRET=